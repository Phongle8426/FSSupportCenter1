<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F5F9"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".RegisterCenter"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/registrationanimation"
        app:lottie_loop="true"/>

    <TextView
        android:layout_width="233dp"
        android:layout_height="90dp"
        android:fontFamily="@font/bungee"
        android:text="Register Account"
        android:textColor="#da002b"
        android:textSize="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/centerName_textinputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Center Name"
            app:startIconDrawable="@drawable/ic_boss"
            android:textColorHint="#000000"
            app:boxStrokeColor="#D4D8E7"
            app:hintTextColor="#3066AC">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtxt_centerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newpassword_textinputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Center Email"
            app:startIconDrawable="@drawable/ic_mail"
            android:textColorHint="#000000"
            app:boxStrokeColor="#D4D8E7"
            app:hintTextColor="#3066AC">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtxt_centerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_textinputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Center Phone"
            app:startIconDrawable="@drawable/ic_phone"
            android:textColorHint="#000000"
            app:boxStrokeColor="#D4D8E7"
            app:hintTextColor="#3066AC">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtxt_centerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:textColor="#000000"
            android:id="@+id/btn_centerRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#da002b"
            android:text="Register Now"
            android:textSize="20dp"></Button>
    </LinearLayout>


</LinearLayout>